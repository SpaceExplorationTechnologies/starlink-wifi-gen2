START=91

BIN=/usr/sbin/bmx7
CONF=/etc/config/bmx7
PID=/var/run/bmx7/pid


start() {
	cd /root/
	while pgrep -f mac80211.sh ; do sleep 1; done
	ulimit -c 20000
	$BIN -f $CONF -d0 > /dev/null &
}

stop() {
	start-stop-daemon -p $PID -K
}

restart() {
	stop; sleep 3; start
}
