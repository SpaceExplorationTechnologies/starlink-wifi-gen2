#!/bin/sh /etc/rc.common

START=90
STOP=10
USE_PROCD=1

start_service() {
    . /lib/functions.sh
    . /lib/functions/network.sh
    config_load pimb

    procd_open_instance
    procd_set_param command /usr/sbin/pimbd
    procd_append_param command -S
    procd_append_param command -L 6

    procd_set_param respawn
    procd_close_instance
}


