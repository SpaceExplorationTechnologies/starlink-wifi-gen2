#!/usr/bin/env perl

use strict;
use Getopt::Long;

my $output;
my $version;

Getopt::Long::Configure('pass_through');
Getopt::Long::GetOptions(
	'output=s' => \$output,
	'version'  => \$version
);

if ($version)
{
	printf "OpenWrt help2man 1.40.10\n";
	exit 0;
}
elsif ($output)
{
	open O, "> $output" || die "Unable to open $output: $!\n";
	print O "Dummy man page.\n";
	close O;
}
else
{
	print O "Dummy man page.\n";
}
